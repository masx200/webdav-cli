{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
}
