{
    "compilerOptions": {
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "module": "esnext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
